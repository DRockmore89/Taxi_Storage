/feel free to use these for back end testing at:

http://localhost:3001/graphql


mutation addCustomer {
  addCustomer (
    $firstName: String!, 
    $lastName: String!, 
    $email: String!, 
    $password: String!, 
    $address: String!, 
    $city: String!, 
    $state: String!, 
    $zip: String!, 
    $phone: String!) {
    token,
    customer {
      _id
      firstName
      lastName
      email
      password
      address	
      city
      state
      zip
      phone
  	} 
  }
}

query variables example for addCustomer:
{
  firstName: "Beth", 
  lastName: "Smith", 
  email: "BS123@gmail.com", 
  password: "password123", 
  address: "123 Happy Street", 
  city: "Atlanta", 
  state: "Georgia", 
  zip: "30350", phone: "404-555-5555"
}

mutation login {
  login ($email: String!, $password: String! ) {
    token,
    customer {
      _id
      email
    }
  }
}

query variables example for login:
{
  "email": "BS123@gmail.com",
  "password": "password123
}


query getCustomers {
  customers {
    _id
    firstName
    lastName
    email
    password
    address
    city
    state
    zip
    phone
  }
}

query getCustomerById {
  customer (customerId: "60f4be1de5786e44b816d88d") {
    _id
    firstName
    lastName
    email
    password
    address
    city
    state
    zip
    phone
  }
}
